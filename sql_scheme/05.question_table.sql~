CREATE TABLE IF NOT EXISTS QUESTION (
    ID BIGINT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    QUESTION LONGVARCHAR NOT NULL,
    ALTERNATIVE_A LONGVARCHAR NOT NULL,
    ALTERNATIVE_B LONGVARCHAR NOT NULL,
    ALTERNATIVE_C LONGVARCHAR NOT NULL,
    ALTERNATIVE_D LONGVARCHAR NOT NULL,
    ANSWER VARCHAR(1) NOT NULL,
    AMOUNT INT NOT NULL,
    TIMETOANSWER INT DEFAULT 60
);
